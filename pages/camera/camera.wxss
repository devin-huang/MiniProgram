/* pages/camera/camera.wxss */
.camera {
  width: 100%;
  height: 100vh;
  position: relative;
}

.fixed-text {
  position: fixed;
  top: 100px;
  left: 0;
  z-index: 9;
  width: 100%;
  text-align: center;
  color: white;
  font-size: 14px;
}

.camera .footer {
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50px;
  color: white;
  background-color: #333333;
}